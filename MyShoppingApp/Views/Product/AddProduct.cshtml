@model MyShoppingApp.Models.Product
@{
	ViewData["Title"] = "Add Product";
}
@{
<a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary">Back to Products</a>
<h1>AddProduct</h1>
<hr />
<div>
	<form method="post">
	<div class="form-group">
		<label>Product Name</label>
		<input asp-for="Name" type="text" value="" class="form-control"/>
	</div>
	<div class="form-group">
		<label>Product Desc</label>
				<input asp-for="Description" type="text" value="" class="form-control">
	</div>
	<div class="form-group">
		<label>Product Category</label>
				<input asp-for="Category" type="text" value="" class="form-control" />
	</div>
	<input type="submit" value="Save" class="btn btn-primary"/>
	<input type="button" value="Reset" class="btn btn-secondary"/>

	</form>
	<hr/>
	@{
		if(ViewBag.message!=null)
		{
			<h2 class="alert alert-success">@ViewBag.message</h2>
		}
	}
</div>
}